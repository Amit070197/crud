<p id="notice"><%= notice %></p>
<div class='bkg' >
<h1>Users</h1>
<table  class='table table-hover' >
  <thead class="thead-dark" >
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Contact Number</th>
      <th>Age</th>
      <th>Email</th>
      <th>Appointment Date</th>
      <th>Status</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody  >
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.name, book, class:'name' %></td>
        <td><%= book.address %></td>
        <td><%= book.contact_number %></td>
        <td><%= book.age %></td>
        <td><%= book.email %></td>
        <td><%= book.date %></td>
        <td><%= book.status %></td>
        
<%# <button type="button" class="btn btn-danger">Danger</button> %>
        <td><%= link_to 'Edit', edit_book_path(book),class:"btn btn-outline-primary" %></td>
        <td><%= link_to 'Destroy', book, class:"btn btn-outline-danger",method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Book Appointment', new_book_path, class:"btn btn-outline-success"  %>

</div>